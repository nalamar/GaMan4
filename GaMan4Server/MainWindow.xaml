<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        
        xmlns:local="clr-namespace:GaMan4Server" x:Class="GaMan4Server.MainWindow"
        Title="MainWindow" Height="768" Width="1024">
    <Grid>
        <ListBox HorizontalAlignment="Left" Height="183" Margin="342,69,0,0" VerticalAlignment="Top" Width="286" ItemsSource="{DynamicResource ProduktListData}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Path=ProduktName}"/>
                        <TextBlock Text="{Binding Path=ProduktVK}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
    <Window.Resources>
        <local:ProduktList x:Key="ProduktListData"/>
    </Window.Resources>    
</Window>

